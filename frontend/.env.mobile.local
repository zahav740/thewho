# Мобильная конфигурация для локальной разработки
# Создано: 2025-06-21

# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ===========================================
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_MOBILE=true

# ===========================================
# API КОНФИГУРАЦИЯ (АВТООПРЕДЕЛЕНИЕ)
# ===========================================
# API URL будет определяться автоматически
# Для мобильных устройств будет искать доступный backend
REACT_APP_API_TIMEOUT=15000
REACT_APP_API_RETRY_ATTEMPTS=3

# ===========================================
# МОБИЛЬНЫЕ НАСТРОЙКИ
# ===========================================
REACT_APP_MOBILE_BREAKPOINT=768
REACT_APP_TABLET_BREAKPOINT=1024
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_SERVICE_WORKER=false

# ===========================================
# РАЗРАБОТКА
# ===========================================
REACT_APP_LOG_LEVEL=debug
REACT_APP_DEBUG_MODE=true
REACT_APP_CONSOLE_LOGS=true
FAST_REFRESH=true
CHOKIDAR_USEPOLLING=false

# ===========================================
# СЕТЬ
# ===========================================
# Эти настройки позволят подключаться с других устройств
HOST=0.0.0.0
PORT=5101
DANGEROUSLY_DISABLE_HOST_CHECK=true

# ===========================================
# CORS & SECURITY (для разработки)
# ===========================================
REACT_APP_CORS_ORIGIN=*
REACT_APP_ALLOWED_ORIGINS=*

# ===========================================
# FEATURES
# ===========================================
REACT_APP_ENABLE_CALENDAR=true
REACT_APP_ENABLE_CHARTS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# ===========================================
# UI/UX
# ===========================================
REACT_APP_THEME=default
REACT_APP_PRIMARY_COLOR=#1890ff
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_COMPACT_MODE=true

# ===========================================
# CACHING (отключено для разработки)
# ===========================================
REACT_APP_CACHE_DURATION=0
REACT_APP_LOCAL_STORAGE_PREFIX=thewho_dev_
REACT_APP_SESSION_STORAGE=true

# ===========================================
# ERROR HANDLING
# ===========================================
REACT_APP_ERROR_BOUNDARY=true
REACT_APP_FALLBACK_ERROR_MESSAGE="Ошибка подключения. Проверьте сеть."
REACT_APP_SHOW_ERROR_DETAILS=true
