# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ===========================================
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=1.0.0
REACT_APP_MOBILE=true

# ===========================================
# API КОНФИГУРАЦИЯ
# ===========================================
REACT_APP_API_URL=https://kasuf.xyz/api
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# ===========================================
# SUPABASE DATABASE КОНФИГУРАЦИЯ  
# ===========================================
REACT_APP_DB_HOST=aws-0-eu-central-1.pooler.supabase.com
REACT_APP_DB_PORT=6543
REACT_APP_DB_NAME=postgres
REACT_APP_DB_USER=postgres.kukqacmzfmzepdfddppl
REACT_APP_DB_PASSWORD=Magarel1!
REACT_APP_DATABASE_URL=postgresql://postgres.kukqacmzfmzepdfddppl:Magarel1!@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
REACT_APP_JWT_SECRET=YourSuperSecretJWTKeyForBeget256BitsLong!
REACT_APP_JWT_EXPIRES_IN=7d
REACT_APP_ENABLE_AUTH=true
REACT_APP_SESSION_TIMEOUT=3600000

# ===========================================
# CORS & NETWORKING
# ===========================================
REACT_APP_CORS_ORIGIN=https://kasuf.xyz
REACT_APP_ALLOWED_ORIGINS=https://kasuf.xyz,https://www.kasuf.xyz
REACT_APP_DOMAIN=kasuf.xyz

# ===========================================
# МОБИЛЬНЫЕ НАСТРОЙКИ
# ===========================================
REACT_APP_MOBILE_BREAKPOINT=768
REACT_APP_TABLET_BREAKPOINT=1024
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_STRATEGY=network-first

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_BUNDLE_ANALYZER=false
GENERATE_SOURCEMAP=false

# ===========================================
# LOGGING & MONITORING
# ===========================================
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_DEBUG_MODE=false
REACT_APP_CONSOLE_LOGS=false

# ===========================================
# FEATURES FLAGS
# ===========================================
REACT_APP_ENABLE_CALENDAR=true
REACT_APP_ENABLE_CHARTS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# ===========================================
# INTERNATIONALIZATION
# ===========================================
REACT_APP_DEFAULT_LANGUAGE=ru
REACT_APP_SUPPORTED_LANGUAGES=ru,en
REACT_APP_ENABLE_TRANSLATIONS=true

# ===========================================
# UI/UX НАСТРОЙКИ
# ===========================================
REACT_APP_THEME=default
REACT_APP_PRIMARY_COLOR=#1890ff
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_COMPACT_MODE=true

# ===========================================
# CACHING & STORAGE
# ===========================================
REACT_APP_CACHE_DURATION=300000
REACT_APP_LOCAL_STORAGE_PREFIX=thewho_crm_
REACT_APP_SESSION_STORAGE=true

# ===========================================
# BUILD НАСТРОЙКИ
# ===========================================
BUILD_PATH=build-mobile
PUBLIC_URL=/
REACT_APP_PUBLIC_URL=https://kasuf.xyz

# ===========================================
# ADVANCED SETTINGS
# ===========================================
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_SUPPORTED_FILE_TYPES=.xlsx,.xls,.csv
REACT_APP_MAX_CONCURRENT_REQUESTS=5
REACT_APP_REQUEST_TIMEOUT=30000

# ===========================================
# SOCIAL & SEO
# ===========================================
REACT_APP_SITE_NAME="TheWho CRM"
REACT_APP_SITE_DESCRIPTION="Система управления производством"
REACT_APP_SITE_KEYWORDS="crm,производство,управление,theWho"
REACT_APP_AUTHOR="TheWho Team"

# ===========================================
# BEGET SPECIFIC SETTINGS
# ===========================================
REACT_APP_HOSTING_PROVIDER=beget
REACT_APP_SERVER_PATH=/var/upload
REACT_APP_HTACCESS_ENABLED=true
REACT_APP_MOD_REWRITE=true

# ===========================================
# ERROR HANDLING
# ===========================================
REACT_APP_ERROR_BOUNDARY=true
REACT_APP_FALLBACK_ERROR_MESSAGE="Произошла ошибка. Пожалуйста, обновите страницу."
REACT_APP_SHOW_ERROR_DETAILS=false

# ===========================================
# NOTIFICATIONS
# ===========================================
REACT_APP_NOTIFICATION_DURATION=4000
REACT_APP_MAX_NOTIFICATIONS=3
REACT_APP_NOTIFICATION_POSITION=topRight
